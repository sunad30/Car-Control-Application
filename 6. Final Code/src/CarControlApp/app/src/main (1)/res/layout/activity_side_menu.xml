<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    tools:context=".SideMenu">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sidebar">

        <Button
            android:id="@+id/sidesett"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="55dp"
            android:background="@drawable/sideitem"
            android:drawableLeft="@drawable/settings"
            android:drawablePadding="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:text="Definições"
            android:textAlignment="viewStart"
            android:textColor="@android:color/background_light"
            android:textSize="14sp" />

        <Button
            android:id="@+id/sideloc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/sideac"
            android:background="@drawable/sideitem"
            android:drawableLeft="@drawable/localize"
            android:drawablePadding="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:text="Localizar"
            android:textAlignment="viewStart"
            android:textColor="@android:color/background_light"
            android:textSize="14sp" />

        <Button
            android:id="@+id/sidealertas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/sidesett"
            android:layout_alignParentStart="true"
            android:background="@drawable/sideitem"
            android:drawableLeft="@drawable/alertas"
            android:drawablePadding="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:text="Alertas"
            android:textAlignment="viewStart"
            android:textColor="@android:color/background_light"
            android:textSize="14sp" />

        <Button
            android:id="@+id/sideac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/sidecontrols"
            android:background="@drawable/sideitem"
            android:drawableLeft="@drawable/ac"
            android:drawablePadding="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:text="Ar Condicionado"
            android:textAlignment="viewStart"
            android:textColor="@android:color/background_light"
            android:textSize="14sp" />

        <Button
            android:id="@+id/sidecontrols"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/sidestate"
            android:background="@drawable/sideitem"
            android:drawableLeft="@drawable/controls"
            android:drawablePadding="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:text="Controlos"
            android:textAlignment="viewStart"
            android:textColor="@android:color/background_light"
            android:textSize="14sp" />

        <Button
            android:id="@+id/sidestate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="20dp"
            android:background="@drawable/sideitem"
            android:drawableLeft="@drawable/status"
            android:drawablePadding="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:text="Estado"
            android:textAlignment="viewStart"
            android:textColor="@android:color/background_light"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="164dp"
            android:layout_height="168dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/logo" />

    </RelativeLayout>

</RelativeLayout>