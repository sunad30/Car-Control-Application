<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    tools:context=".AirConditioner">

    <ImageView
        android:id="@+id/temp"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:tint="@android:color/background_light"
        app:srcCompat="@drawable/floco" />

    <TextView
        android:id="@+id/temperature"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginBottom="70dp"
        android:textAlignment="viewEnd"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/graus"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/temperature"
        android:layout_toEndOf="@+id/temperature"
        android:text=" ºC"
        android:textAlignment="viewStart"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/acOnOff"
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="122dp"
        android:background="@drawable/button_unselected"
        android:text="Ligar/Desligar"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/down2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/temperature"
        android:layout_marginStart="40dp"
        android:background="@drawable/swipe"
        android:rotation="-90"
        android:visibility="invisible" />

    <Button
        android:id="@+id/down"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/acOnOff"
        android:layout_alignTop="@+id/temperature"
        android:background="@drawable/swipepequeno"
        android:rotation="-90"
        android:visibility="invisible" />

    <Button
        android:id="@+id/up"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/acOnOff"
        android:layout_alignTop="@+id/temperature"
        android:background="@drawable/swipepequeno"
        android:rotation="90"
        android:visibility="invisible" />

    <Button
        android:id="@+id/up2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/temperature"
        android:layout_marginEnd="40dp"
        android:background="@drawable/swipe"
        android:rotation="90"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="111dp"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp"
        android:drawableLeft="@drawable/temperature"
        android:text="19ºC"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/goToMenu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/info"
        android:layout_marginStart="10dp"
        android:background="@drawable/swipe"
        android:gravity="top|center"
        android:paddingTop="2dp"
        android:rotation="-90"
        android:textColor="@android:color/background_light" />

    <ImageButton
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/background_dark"
        app:srcCompat="@drawable/info50x50" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Ar Condicionado"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

</RelativeLayout>