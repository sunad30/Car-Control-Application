<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    tools:context=".Main">

    <ImageView
        android:id="@+id/baseimage"
        android:layout_width="288dp"
        android:layout_height="484dp"
        android:layout_alignTop="@+id/fronthood"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/base" />

    <ImageView
        android:id="@+id/fronthood"
        android:layout_width="288dp"
        android:layout_height="484dp"
        android:layout_alignTop="@+id/rightfront"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        app:srcCompat="@drawable/fronthood" />

    <ImageView
        android:id="@+id/rightfront"
        android:layout_width="288dp"
        android:layout_height="484dp"
        android:layout_alignTop="@+id/rightback"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        app:srcCompat="@drawable/rightfrontdoor" />

    <ImageView
        android:id="@+id/rightback"
        android:layout_width="288dp"
        android:layout_height="484dp"
        android:layout_alignTop="@+id/leftfront"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        app:srcCompat="@drawable/rightbackdoor" />

    <ImageView
        android:id="@+id/leftfront"
        android:layout_width="288dp"
        android:layout_height="484dp"
        android:layout_alignTop="@+id/leftback"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        app:srcCompat="@drawable/leftfrontdoor" />

    <ImageView
        android:id="@+id/leftback"
        android:layout_width="288dp"
        android:layout_height="484dp"
        android:layout_alignTop="@+id/trunkdoor"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        app:srcCompat="@drawable/leftbackdoor" />

    <ImageView
        android:id="@+id/trunkdoor"
        android:layout_width="288dp"
        android:layout_height="484dp"
        android:layout_alignTop="@+id/leftfrontlight"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        app:srcCompat="@drawable/trunkdoor" />

    <ImageView
        android:id="@+id/leftfrontlight"
        android:layout_width="288dp"
        android:layout_height="484dp"
        android:layout_alignTop="@+id/rightfrontlight"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        app:srcCompat="@drawable/leftfrontlight" />

    <ImageView
        android:id="@+id/rightfrontlight"
        android:layout_width="288dp"
        android:layout_height="484dp"
        android:layout_alignTop="@+id/leftbacklight"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        app:srcCompat="@drawable/rightfrontlight" />

    <ImageView
        android:id="@+id/leftbacklight"
        android:layout_width="288dp"
        android:layout_height="484dp"
        android:layout_alignTop="@+id/rightbacklight"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        app:srcCompat="@drawable/leftbacklight" />

    <ImageView
        android:id="@+id/rightbacklight"
        android:layout_width="288dp"
        android:layout_height="484dp"
        android:layout_alignTop="@+id/fuelcap"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        app:srcCompat="@drawable/rightbacklight" />

    <ImageView
        android:id="@+id/fuelcap"
        android:layout_width="288dp"
        android:layout_height="484dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/fuelstorage" />

    <ImageButton
        android:id="@+id/alertrightbacklight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/alerttrunk"
        android:layout_marginEnd="69dp"
        android:layout_marginTop="-118dp"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:tint="@android:color/holo_orange_light"
        app:srcCompat="@android:drawable/ic_dialog_alert" />

    <ImageButton
        android:id="@+id/alertrightback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/alertrightfront"
        android:layout_marginBottom="244dp"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:tint="@android:color/holo_red_light"
        app:srcCompat="@android:drawable/ic_dialog_alert" />

    <ImageButton
        android:id="@+id/alertrightfront"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="253dp"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:tint="@android:color/holo_red_light"
        app:srcCompat="@android:drawable/ic_dialog_alert" />

    <ImageButton
        android:id="@+id/alertrightfrontlight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/alertleftfrontlight"
        android:layout_marginEnd="70dp"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:tint="@android:color/holo_orange_light"
        app:srcCompat="@android:drawable/ic_dialog_alert" />

    <ImageButton
        android:id="@+id/alertleftbacklight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/alertrightbacklight"
        android:layout_marginStart="69dp"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:tint="@android:color/holo_orange_light"
        app:srcCompat="@android:drawable/ic_dialog_alert" />

    <ImageButton
        android:id="@+id/alertleftfrontlight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/alertleftbacklight"
        android:layout_marginTop="70dp"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:tint="@android:color/holo_orange_light"
        app:srcCompat="@android:drawable/ic_dialog_alert" />

    <ImageButton
        android:id="@+id/alerttrunk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="137dp"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:tint="@android:color/holo_red_light"
        app:srcCompat="@android:drawable/ic_dialog_alert" />

    <ImageButton
        android:id="@+id/alertfronthood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:tint="@android:color/holo_red_light"
        app:srcCompat="@android:drawable/ic_dialog_alert" />

    <ImageButton
        android:id="@+id/alertfuel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/alertleftback"
        android:layout_marginBottom="169dp"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:tint="@android:color/holo_red_light"
        app:srcCompat="@android:drawable/ic_dialog_alert" />

    <ImageButton
        android:id="@+id/alertleftback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/alertleftfront"
        android:layout_alignTop="@+id/alertrightback"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:tint="@android:color/holo_red_light"
        app:srcCompat="@android:drawable/ic_dialog_alert" />

    <ImageButton
        android:id="@+id/alertleftfront"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/alertrightfront"
        android:layout_marginStart="50dp"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:tint="@android:color/holo_red_light"
        app:srcCompat="@android:drawable/ic_dialog_alert" />

    <ImageButton
        android:id="@+id/acOn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="151dp"
        android:background="@android:color/background_dark"
        android:tint="@android:color/background_light"
        app:srcCompat="@drawable/ac20x20" />

    <TextView
        android:id="@+id/temperatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/acOn"
        android:layout_marginStart="20dp"
        android:text="TextView"
        android:textColor="@android:color/background_light"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        app:srcCompat="@drawable/battery" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-40dp"
        android:paddingTop="8dp"
        android:text="Autonomia: 32km"
        android:textColor="@color/myblue"
        android:textSize="14sp" />

    <ImageButton
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/background_dark"
            app:srcCompat="@drawable/info50x50" />

    <Button
        android:id="@+id/burger"
        android:layout_width="49dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/burger" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/burger"
        android:layout_centerHorizontal="true"
        android:text="Meu Carro"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

</RelativeLayout>
